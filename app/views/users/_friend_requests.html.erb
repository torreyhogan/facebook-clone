<% if @friend_requests_received %>
<h3>Notifications</h3>
	<p>Friend Requests Recieved:</p>
	<ul>
		<% @friend_requests_received.each do |request| %>
			<li><%= link_to(request.sender.name, request.sender) %>
				<%= link_to "Accept Friend Request", friendships_path(friend_id: request.sender.id), method: :post %>
					</li>
		<% end %>
	</ul>
<% end %>

<% if @friend_requests_sent %>
	<p>Friend Requests Sent:</p>
	<ul>
		<% @friend_requests_sent.each do |request| %>
			<li><%= link_to(request.receiver.name, request.receiver) %> 
				<%= link_to "Delete friend request", request, :method => :delete  %>

			</li>
		<% end %>
	</ul>
<% end %>
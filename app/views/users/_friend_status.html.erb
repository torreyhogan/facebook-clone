	<% @users.each do |user| %>
		<li><%= link_to(user.name, user) %>
			<% if @friends.include?(user) %>
				<%= link_to "Unfriend", friendships_destroy_path(:friend_id => user.id) %>
			<% elsif @sent_requests.include?(user) %>
				<%= link_to "Delete friend request", friend_requests_path(:receiver_id => user.id), :method => :destroy %>
			<% elsif @received_requests.include?(user) %>
				<%= link_to "Accept Friend Request", friendships_create_path(:receiver_id => user.id) %>
			<% else %>
				<%= link_to "Friend Request", friend_requests_path(:receiver_id => user.id), :method => :post %>
			<% end %>
		</li>
	<% end %>
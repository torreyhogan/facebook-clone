<h2>Users</h2>
<ul>
	<% @users.each do |user| %>
		<li><%= link_to(user.name, user) %>
			<% if @friends.include?(user) %>
				<%= link_to "Unfriend", friendships_path(:friend_id => user.id), method: :destroy %>
			<% elsif @sent_requests.include?(user) %>
				<%= link_to "Delete friend request", friend_requests_path(:receiver_id => user.id), :method => :delete  %>
			<% elsif @received_requests.include?(user) %>
				<%= link_to "Accept Friend Request", friendships_path(:receiver_id => user.id), :method => :post %>
			<% else %>
				<%= link_to "Friend Request", friend_requests_path(:receiver_id => user.id), :method => :post %>
			<% end %>
		</li>
	<% end %>
</ul>
